@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .toggle-form {
            text-align: center;
            margin-top: 20px;
        }

        .alert {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Form Đăng Ký -->
        <div class="form-container" id="registerForm">
            <h2 class="text-center mb-4">Đăng Ký</h2>
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["error"]
                </div>
            }
            <form id="register" action="@Url.Action("Register", "KhachHang")" method="post">
                <div class="mb-3">
                    <label for="fullName" class="form-label">Họ Tên</label>
                    <input type="text" class="form-control" id="fullName" name="fullName" maxlength="150" required pattern="^[^0-9].*$" title="Họ tên không được bắt đầu bằng số">
                    <div class="invalid-feedback">Họ tên không được bắt đầu bằng số</div>
                </div>
                <div class="mb-3">
                    <label for="diaChi" class="form-label">Địa Chỉ</label>
                    <input type="text" class="form-control" id="diaChi" name="diaChi" maxlength="500" required>
                </div>
                <div class="mb-3">
                    <label for="soDienThoai" class="form-label">Số Điện Thoại</label>
                    <input type="text" class="form-control" id="soDienThoai" name="soDienThoai" required pattern="^\d{10,}$" title="Số điện thoại phải có từ 10 số trở lên">
                    <div class="invalid-feedback">Số điện thoại phải có từ 10 số trở lên</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" maxlength="500" required title="Email không hợp lệ">
                    <div class="invalid-feedback">Email không hợp lệ</div>
                </div>
                <div class="mb-3">
                    <label for="cccd" class="form-label">CCCD/CMND</label>
                    <input type="text" class="form-control" id="cccd" name="cccd" maxlength="500" required pattern="^\d{9,}$" title="CCCD/CMND phải có từ 9 số trở lên">
                    <div class="invalid-feedback">CCCD/CMND phải có từ 9 số trở lên</div>
                </div>
                <div class="mb-3">
                    <label for="matKhau" class="form-label">Mật Khẩu</label>
                    <input type="password" class="form-control" id="matKhau" name="matKhau" maxlength="50" required pattern=".{6,}" title="Mật khẩu phải có từ 6 ký tự trở lên">
                    <div class="invalid-feedback">Mật khẩu phải có từ 6 ký tự trở lên</div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng Ký</button>
            </form>
            <div class="toggle-form">
                <p>Đã có tài khoản? <a href="@Url.Action("Login", "KhachHang")">Đăng Nhập</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Client-side validation for forms
        document.getElementById('register').addEventListener('submit', function (event) {
            const form = event.target;
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        });
    </script>
</html>